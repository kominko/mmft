{
  "name": "Myanmar Font Tools",
  "description": "Tools for writing and reading in Myanmar language",
  "version": "0.1",
  "permissions": ["contextMenus", "tabs", "http://*/*", "https://*/*"],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["jquery.min.js", "mm.font.tools.js", "mm.kb.0.0.2.js"]
    }
  ],
  "icons": { 
    "16": "mmft-16.png",
    "48": "mmft-48.png",
    "128": "mmft-128.png" 
  },
  "background": {
    "scripts": ["mm.context.menu.js"]
  },
  "web_accessible_resources": [
    "mm.css",
    "YoeYar-One.ttf",
    "mm3.ttf",
    "Padauk.ttf",
    "ZawgyiOne.ttf"
  ],  
  "manifest_version": 2
}
